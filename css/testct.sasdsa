	/*OPETTAJALLE FOR TORSTAI*/
	#torstaionly{
		background-color: white;
		width: 90%;
		margin-float: left; width: auto;
		margin-top: 0;
		margin-bottom: 0;
		padding-left: 1em;
		padding-top: 1em;
		padding-bottom: 1em;
		overflow: auto;
	}

	#opettajalllelinks{
		position: relative;
		top: 1px;
		width: 100%;
		height: auto;
		background-color: #840bd1;
		color: white;
		text-align: center;
	}

	#opettajalllelinks a{
		color: white;
		border: 2px solid white;
	}
	/*FRONTPAGE FOR TORSTAI*/
	.torstaileft{
		background-color: white;
		position: relative;
		float: left; width: auto;
		width: 100vw;
	}

	.torstairight{
		background-color: white;
		position: relative;
		float: left; width: auto;
		width: 100vw;
	}

	#tpbtn{
		position: relative;
		float: left; width: auto;
		width: 100vw;
		padding-left: 1em;
		padding-right: 1em;
	}
	#tpbtn img{
		width: 100vw;
	}

	.tcl{
		position: relative;
		float: left;
		width: auto;
		width: 100vw;
		padding-bottom: 2em;
		padding-left: 1em;
		padding-right: 1em;
	}

	.tcl img{
		position: relative;
		float: left; width: auto;
		width: 100vw;
		padding-bottom: 2em;
		padding-left: 1em;
		padding-right: 1em;
	}

	.tcr{
		position: relative;
		float: left; width: auto;
		width: 100vw;
		padding-bottom: 2em;
		padding-left: 1em;
		padding-right: 1em;
	}

	.torstaifooter{
		position: relative;
		float: left; width: auto;
		width: 100vw;
		padding-bottom: 2em;
		padding-left: 1em;
		padding-right: 1em;
	}

}